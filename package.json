{
  "name": "epam_reactjs_mentoring",
  "version": "1.0.0",
  "description": "A single page app for a movie DB",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "docker": "VERSION=$npm_package_version docker-compose up -d",
    "docker:stop": "docker-compose down -v",
    "docker:publish": "VERSION=$npm_package_version docker-compose push",
    "build": "webpack --config webpack.prod.js",
    "deploy": "npm run build && gh-pages -d dist",
    "eslint": "eslint .",
    "eslint:fix": "eslint ./src --fix",
    "pretty": "prettier --check .",
    "pretty:fix": "prettier --write .",
    "lint": "npm run eslint && npm run pretty",
    "lint:fix": "npm run eslint:fix && npm run pretty:fix",
    "precommit": "husky install",
    "type-check": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidverweij/epam_reactjs_mentoring.git"
  },
  "author": "David Verweij",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidverweij/epam_reactjs_mentoring/issues"
  },
  "homepage": "https://github.com/davidverweij/epam_reactjs_mentoring",
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-typescript-to-proptypes": "^2.0.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "css-loader": "^6.7.1",
    "fork-ts-checker-webpack-plugin": "^7.2.7",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "mini-css-extract-plugin": "^2.6.0",
    "node-sass": "^7.0.1",
    "postcss-loader": "^6.2.1",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "webpack-merge": "^5.8.0"
  }
}
